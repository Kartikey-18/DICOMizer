<Window x:Class="DICOMizer.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings - DICOMizer"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="PACS Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- PACS Settings -->
        <GroupBox Grid.Row="1" Header="PACS Server Settings" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Host -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Host / IP Address *" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="HostTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5"/>

                <!-- Port -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Port *" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="PortTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" Text="104"/>

                <!-- AE Title -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="AE Title *" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="AeTitleTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" MaxLength="16"/>

                <!-- Called AE Title -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Called AE Title *" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="CalledAeTitleTextBox" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" MaxLength="16"/>

                <!-- Timeout -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Timeout (seconds)" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="TimeoutTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" Text="30"/>

                <!-- Use TLS -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Use TLS/SSL" VerticalAlignment="Center" Margin="0,5"/>
                <CheckBox Name="UseTlsCheckBox" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <!-- Connection Status -->
                <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="#E8F4FD" BorderBrush="#007ACC" BorderThickness="1"
                        Padding="10" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Name="ConnectionStatusTextBlock" Text="Connection not tested"
                                   FontWeight="Bold" Margin="0,0,0,5"/>
                        <Button Name="TestConnectionButton" Content="Test Connection"
                                Width="150" HorizontalAlignment="Left"
                                Style="{StaticResource SecondaryButton}"
                                Click="TestConnectionButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Application Settings -->
        <GroupBox Grid.Row="2" Header="Application Settings" Padding="15" Margin="0,15,0,0">
            <StackPanel>
                <CheckBox Name="AutoOpenFolderCheckBox" Content="Automatically open output folder after conversion"
                          Margin="0,5"/>
                <CheckBox Name="HardwareAccelerationCheckBox" Content="Enable hardware acceleration (if available)"
                          Margin="0,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="CancelButton" Grid.Column="1" Content="Cancel" Width="100"
                    Margin="0,0,10,0" Click="CancelButton_Click"/>

            <Button Name="SaveButton" Grid.Column="2" Content="Save Settings" Width="120"
                    Style="{StaticResource PrimaryButton}" Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Window>
