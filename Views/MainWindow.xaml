<Window x:Class="DICOMizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DICOMizer - Video to DICOM Converter"
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="SpaceBetween">
            <TextBlock Text="DICOMizer" FontSize="24" FontWeight="Bold" Foreground="#007ACC"/>
            <Button Name="SettingsButton" Content="âš™ Settings" Style="{StaticResource SecondaryButton}"
                    Click="SettingsButton_Click"/>
        </StackPanel>

        <!-- Video Selection Section -->
        <GroupBox Grid.Row="1" Header="Video File" Margin="0,15,0,0" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="VideoPathTextBox" Grid.Row="0" Grid.Column="0"
                         IsReadOnly="True" Margin="0,0,10,0" Padding="5"/>
                <Button Name="BrowseButton" Grid.Row="0" Grid.Column="1"
                        Content="Browse..." Width="100" Margin="0,0,10,0"
                        Click="BrowseButton_Click"/>
                <Button Name="TrimButton" Grid.Row="0" Grid.Column="2"
                        Content="Trim Video" Width="100" IsEnabled="False"
                        Click="TrimButton_Click"/>

                <TextBlock Name="VideoInfoTextBlock" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                           Margin="0,10,0,0" Foreground="#666666"/>

                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="Black" Height="250" Margin="0,10,0,0">
                    <MediaElement Name="VideoPreview" LoadedBehavior="Manual" Stretch="Uniform"/>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Patient Metadata Section -->
        <GroupBox Grid.Row="2" Header="Patient Information" Margin="0,15,0,0" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Patient ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Patient ID *" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="PatientIdTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5"/>

                    <!-- Patient Name -->
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Patient Name *" VerticalAlignment="Center" Margin="10,5,0,5"/>
                    <TextBox Name="PatientNameTextBox" Grid.Row="0" Grid.Column="3" Margin="5" Padding="5"/>

                    <!-- Birth Date -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Birth Date" VerticalAlignment="Center" Margin="0,5"/>
                    <DatePicker Name="PatientBirthDatePicker" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5"/>

                    <!-- Sex -->
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Sex" VerticalAlignment="Center" Margin="10,5,0,5"/>
                    <ComboBox Name="PatientSexComboBox" Grid.Row="1" Grid.Column="3" Margin="5" Padding="5">
                        <ComboBoxItem Content="Male" Tag="M"/>
                        <ComboBoxItem Content="Female" Tag="F"/>
                        <ComboBoxItem Content="Other" Tag="O"/>
                    </ComboBox>

                    <!-- Study Description -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Study Description" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="StudyDescriptionTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Padding="5"/>

                    <!-- Series Description -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Series Description" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="SeriesDescriptionTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Padding="5"/>

                    <!-- Performing Physician -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Physician Name" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="PhysicianNameTextBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Padding="5"/>

                    <!-- Output Options -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Output Options" VerticalAlignment="Center" Margin="0,15,0,5"/>
                    <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="5,15,5,5">
                        <CheckBox Name="SaveToFileCheckBox" Content="Save to file" IsChecked="True" Margin="0,0,20,0"/>
                        <CheckBox Name="SendToPacsCheckBox" Content="Send to PACS" Margin="0,0,20,0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- Progress Section -->
        <GroupBox Grid.Row="3" Header="Progress" Margin="0,15,0,0" Padding="15">
            <StackPanel>
                <ProgressBar Name="ProgressBar" Height="25" Margin="0,0,0,10"/>
                <TextBlock Name="StatusTextBlock" Text="Ready" TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="OpenOutputButton" Grid.Column="0" Content="Open Output Folder"
                    Style="{StaticResource SecondaryButton}" Click="OpenOutputButton_Click"/>

            <Button Name="CancelButton" Grid.Column="2" Content="Cancel" Width="100"
                    Margin="0,0,10,0" IsEnabled="False" Click="CancelButton_Click"/>

            <Button Name="ConvertButton" Grid.Column="3" Content="Convert to DICOM" Width="150"
                    Style="{StaticResource PrimaryButton}" Click="ConvertButton_Click"/>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="5" Margin="0,15,0,0" TextAlignment="Center" Foreground="#999999" FontSize="10">
            DICOMizer v1.0.0 - Video to DICOM Converter
        </TextBlock>
    </Grid>
</Window>
