<Window x:Class="DICOMizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="DICOMizer - Video to DICOM Converter"
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Icon="/Resources/app.ico">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image Source="/Resources/logo.png" Width="36" Height="36" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="DICOMizer" FontSize="24" FontWeight="Bold" Foreground="#007ACC" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Name="SettingsButton" Content="Settings" HorizontalAlignment="Right"
                    Click="SettingsButton_Click" Padding="10,5"/>
        </Grid>

        <!-- Video Selection Section -->
        <GroupBox Grid.Row="1" Header="Video File" Margin="0,15,0,0" Padding="15">
            <Grid>
                <!-- Drop Zone (visible when no video loaded) -->
                <Border Name="DropZoneBorder"
                        BorderBrush="#B0C4DE" BorderThickness="2" CornerRadius="8"
                        Background="#F8FAFC" MinHeight="160" Margin="0,0,0,0"
                        Cursor="Hand" MouseLeftButtonDown="DropZone_Click"
                        AllowDrop="True" Drop="DropZone_Drop" DragEnter="DropZone_DragEnter" DragLeave="DropZone_DragLeave">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Resources>
                                <Storyboard x:Key="PulseStoryboard">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.4" To="1.0" Duration="0:0:1.5"
                                                     AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </Style.Resources>
                        </Style>
                    </Border.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                                   Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Drop video here" FontSize="16" FontWeight="SemiBold"
                                   Foreground="#333333" HorizontalAlignment="Center"/>
                        <TextBlock Text="or click to browse" FontSize="13"
                                   Foreground="#888888" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        <TextBlock Text="MP4, AVI, MOV, MKV, WMV, FLV, M4V" FontSize="11"
                                   Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Video Info Card (visible when video is loaded) -->
                <Border Name="VideoInfoPanel" Visibility="Collapsed"
                        BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="8"
                        Background="White" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- File name and remove button -->
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8B2;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                           Foreground="#007ACC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Name="VideoFileNameText" FontSize="15" FontWeight="SemiBold"
                                           Foreground="#222222" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Name="RemoveVideoButton" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Background="Transparent" BorderThickness="0" FontSize="14"
                                    Foreground="#999999" Cursor="Hand" Padding="6,4"
                                    ToolTip="Remove video" Click="RemoveVideoButton_Click"/>
                        </Grid>

                        <!-- Video details -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="28,8,0,0">
                            <TextBlock Name="VideoInfoTextBlock" Foreground="#666666" FontSize="13"/>
                        </StackPanel>

                        <!-- Hidden elements for compatibility -->
                        <TextBox Name="VideoPathTextBox" Visibility="Collapsed"/>
                        <MediaElement Name="VideoPreview" LoadedBehavior="Manual" Stretch="Uniform" Visibility="Collapsed"/>

                        <!-- Action buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="28,12,0,0">
                            <Button Name="BrowseButton" Content="Change File"
                                    Padding="12,6" Margin="0,0,10,0" FontSize="12"
                                    Background="#E8F0FE" Foreground="#007ACC" BorderThickness="0"
                                    Cursor="Hand" Click="BrowseButton_Click"/>
                            <Button Name="TrimButton" Content="Trim Video"
                                    Padding="12,6" FontSize="12" IsEnabled="False"
                                    Background="#E8F0FE" Foreground="#007ACC" BorderThickness="0"
                                    Cursor="Hand" Click="TrimButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Patient Metadata Section -->
        <GroupBox Grid.Row="2" Header="Patient Information" Margin="0,15,0,0" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Patient ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Patient ID *" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="PatientIdTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5"/>

                    <!-- Patient Name -->
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Patient Name *" VerticalAlignment="Center" Margin="10,5,0,5"/>
                    <TextBox Name="PatientNameTextBox" Grid.Row="0" Grid.Column="3" Margin="5" Padding="5"/>

                    <!-- Birth Date -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Birth Date" VerticalAlignment="Center" Margin="0,5"/>
                    <DatePicker Name="PatientBirthDatePicker" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5"/>

                    <!-- Sex -->
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Sex" VerticalAlignment="Center" Margin="10,5,0,5"/>
                    <ComboBox Name="PatientSexComboBox" Grid.Row="1" Grid.Column="3" Margin="5" Padding="5">
                        <ComboBoxItem Content="Male" Tag="M"/>
                        <ComboBoxItem Content="Female" Tag="F"/>
                        <ComboBoxItem Content="Other" Tag="O"/>
                    </ComboBox>

                    <!-- Study Description -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Study Description" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="StudyDescriptionTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Padding="5"/>

                    <!-- Study Date -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Study Date" VerticalAlignment="Center" Margin="0,5"/>
                    <DatePicker Name="StudyDatePicker" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5"/>

                    <!-- Study Time -->
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Study Time" VerticalAlignment="Center" Margin="10,5,0,5"/>
                    <TextBox Name="StudyTimeTextBox" Grid.Row="3" Grid.Column="3" Margin="5" Padding="5"
                             Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=HH:mm:ss, Mode=OneTime}"/>

                    <!-- Performing Physician -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Physician Name" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox Name="PhysicianNameTextBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Padding="5"/>

                    <!-- Modality -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Modality" VerticalAlignment="Center" Margin="0,5"/>
                    <ComboBox Name="ModalityComboBox" Grid.Row="5" Grid.Column="1" Margin="5" Padding="5" SelectedIndex="0">
                        <ComboBoxItem Content="ES - Endoscopy" Tag="ES"/>
                        <ComboBoxItem Content="RF - Radiofluoroscopy" Tag="RF"/>
                        <ComboBoxItem Content="XA - X-Ray Angiography" Tag="XA"/>
                        <ComboBoxItem Content="XC - External-camera Photography" Tag="XC"/>
                        <ComboBoxItem Content="US - Ultrasound" Tag="US"/>
                    </ComboBox>

                    <!-- Output Options -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Output Options" VerticalAlignment="Center" Margin="0,15,0,5"/>
                    <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="5,15,5,5">
                        <CheckBox Name="SaveToFileCheckBox" Content="Save to file" IsChecked="True" Margin="0,0,20,0"/>
                        <CheckBox Name="SendToPacsCheckBox" Content="Send to PACS" Margin="0,0,20,0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- Progress Section -->
        <GroupBox Grid.Row="3" Header="Progress" Margin="0,15,0,0" Padding="15">
            <StackPanel>
                <ProgressBar Name="ProgressBar" Height="25" Margin="0,0,0,10"/>
                <TextBlock Name="StatusTextBlock" Text="Ready" TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="OpenOutputButton" Grid.Column="0" Content="Open Output Folder"
                    Style="{StaticResource SecondaryButton}" Click="OpenOutputButton_Click"/>

            <Button Name="CancelButton" Grid.Column="2" Content="Cancel" Width="100"
                    Margin="0,0,10,0" IsEnabled="False" Click="CancelButton_Click"/>

            <Button Name="ConvertButton" Grid.Column="3" Content="Convert to DICOM" Width="150"
                    Style="{StaticResource PrimaryButton}" Click="ConvertButton_Click"/>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="5" Margin="0,15,0,0" TextAlignment="Center" Foreground="#999999" FontSize="10">
            DICOMizer v1.0.0 - Video to DICOM Converter
        </TextBlock>
    </Grid>
    </ScrollViewer>
</Window>
